[user]
	name = Kristi
	email = kristi.dev@gmail.com
[core]
	editor = vim
[diff]
	color = true
[alias]
        dc = diff -b --cached
        ds = diff -b --stat
        s = status
        # summary of what you're going to push
        ps = log --pretty=oneline origin..master
        # like "git log", but include the diffs
        w = whatchanged -p
        # changes since we last did a push
        wo = whatchanged -p origin..

	unstage = reset HEAD --
	stagediff = diff --cached HEAD
	pick = add -p
	changebranch = checkout
	newbranch = checkout -b
	deletebranch = checkout -d
